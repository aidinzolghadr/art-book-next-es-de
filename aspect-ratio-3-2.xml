<!-- 
3:2 aspect ratio
based on 720x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <helpsystem name="help">
         <pos>0.5 0.942708333333333</pos><!-- 360 452.5 -->
         <fontSize>${helpsystemFontSize}</fontSize><!-- 16 -->
         <entrySpacing>0.021875</entrySpacing><!-- 14 -->
         <iconTextSpacing>0.00625</iconTextSpacing><!-- 4 -->
      </helpsystem>
      <image name="help-background">
         <size>1 0.114583333333333</size><!-- 720 55 -->
      </image>
   </view>
   <fontSize name="small">
      <variables>
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="medium,large">
      <variables>
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
      </variables>
   </fontSize>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee-nh,
      gamelist-list-basic-nh
      ">
      <view name="system,gamelist">
         <image name="help-background">
            <visible>false</visible>
         </image>
         <helpsystem name="help">
            <origin>0 0</origin>
            <pos>1 1</pos>
         </helpsystem>
      </view>
   </variant>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <maxItemCount>4.6</maxItemCount>
      </carousel>
   </view>

   <!--
   ///
   Gamelist View - Basic & List Variants
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <maxSize>0.319444444444444 0.104166666666667</maxSize><!-- 230 50 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.048611111111111 0.25</pos><!-- 35 120 -->
            <fontSize>${gamelistFontSize}</fontSize>
         </textlist>
      </view>
      <fontSize name="small">
         <variables>
            <gamelistFontSize>0.033333333333333</gamelistFontSize><!-- 16 -->
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <gamelistFontSize>0.041666666666667</gamelistFontSize><!-- 20 -->
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistFontSize>0.05</gamelistFontSize><!-- 24 -->
         </variables>
      </fontSize>
   </variant>
   <variant name="
      gamelist-list-basic,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-cover,
      gamelist-list-screenshot-marquee
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <lineSpacing>${gamelistLineSpacing}</lineSpacing>
         </textlist>
      </view>
      <fontSize name="small">
         <variables>
            <gamelistLineSpacing>1.785</gamelistLineSpacing>
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <gamelistLineSpacing>1.575</gamelistLineSpacing>
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistLineSpacing>1.45</gamelistLineSpacing>
         </variables>
      </fontSize>
   </variant>
   <variant name="
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh,

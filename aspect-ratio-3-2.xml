      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <text name="description">
            <pos>0.55078125 0.692708333333333</pos><!-- 352.5 332.5 -->
            <size>0.3984375 0.25</size><!-- 255 120 -->
         </text>
         <rating name="rating">
            <origin>1 0.5</origin>
            <pos>0.953125 0.614583333333333</pos><!-- 610 295 -->
            <size>0 0.0375</size><!-- - 18 -->
            <visible>true</visible>
         </rating>
         <image name="
            releasedate-icon,
            players-icon,
            last-played-icon,
            play-count-icon
            ">
            <maxSize>0.021101992966002 0.0375</maxSize><!-- 20 20 -->
            <visible>true</visible>
         </image>
         <image name="releasedate-icon">
            <pos>0.55078125 0.616666666666667</pos><!-- 352.5 296 -->
         </image>
         <datetime name="releasedate">
            <pos>0.59375 0.616666666666667</pos><!-- 380 296 -->
            <fontSize>${gamelistMetadataFontSize}</fontSize>
            <format>${gamelistDateFormat}</format>
            <visible>true</visible>
         </datetime>
      </view>
   </variant>


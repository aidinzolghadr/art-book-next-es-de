            <pos>0.5 0.15625</pos><!-- 50% 75 -->
            <fontSize>0.041666666666667</fontSize><!-- 20 -->
         </text>
      </view>
      <aspectRatio name="4:3">
         <view name="gamelist">
            <text name="custom-collection-name">

<theme>
   <include>./../theme.xml</include>
   <view name="gamelist">
      <text name="custom-collection-name">
         <origin>0.5 0</origin>
         <metadata>systemFullname</metadata>
         <color>${gamelistListLogoColor}</color>
         <letterCase>uppercase</letterCase>
         <horizontalAlignment>center</horizontalAlignment>
         <lineSpacing>1</lineSpacing>
      </text>
   </view>
   <variant name="
      system-multi-gamelist-list,
      system-multi-gamelist-list-immersive,
      system-multi-gamelist-list-immersive-nh,
      system-multi-gamelist-list-no-metadata
      ">
      <aspectRatio name="16:9">
         <view name="gamelist">
            <text name="custom-collection-name">
               <pos>0.1875 0.175925925925926</pos><!-- 360 190 -->
               <size>0.276041666666667 0.040740740740741</size><!-- 530 44 -->
               <fontSize>0.040740740740741</fontSize><!-- 44 -->
            </text>
         </view>
      </aspectRatio>
      <aspectRatio name="16:10">
         <view name="gamelist">
            <text name="custom-collection-name">

<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <image name="help-background">
         <size>1 0.115740740740741</size><!-- 100% 125 -->
      </image>
      <helpsystem name="help">
         <entrySpacing>0.015</entrySpacing>
         <pos>0.5 0.942592592592593</pos><!-- 50% 1018 -->
         <fontSize>0.0333333</fontSize><!-- 36 -->
      </helpsystem>
   </view>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee-nh,
      gamelist-list-basic-nh
      ">
      <view name="system,gamelist">
         <image name="help-background">
            <visible>false</visible>
         </image>
         <helpsystem name="help">
            <origin>0 0</origin>
            <pos>1 1</pos>
         </helpsystem>
      </view>
   </variant>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <maxItemCount>5.5</maxItemCount>
      </carousel>
   </view>

   <!--
   ///
   Gamelist View - Basic & List Variants
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <maxSize>0.276041666666667 0.111111111111111</maxSize><!-- 530 120 -->
         </image>
         <textlist name="gamelist-list">
            <fontSize>0.038888888888889</fontSize><!-- 42 -->
            <lineSpacing>1.49</lineSpacing><!-- 6/6 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <lineSpacing>1.46</lineSpacing><!-- 6/6 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - Basic Variant
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.5 0.134259259259259</pos><!-- 50% 145 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.5 0.261111111111111</pos><!-- 50% 282 -->
            <size>0.7 0.575925925925926</size><!-- - 622(62X10) -->
         </textlist>
      </view>
   </variant>
   <!-- Basic Help System Off -->
   <variant name="
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.7 0.690740740740741</size><!-- - 746(62X12) -->

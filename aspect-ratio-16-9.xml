<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <systemstatus name="system-status">
         <pos>0.97655334 0.04166667</pos><!-- 833 20 -->
         <height>${systemStatusHeight}</height>
         <backgroundPadding>0.014068 0.02083333</backgroundPadding><!-- 12 10 -->

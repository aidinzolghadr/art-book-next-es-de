<themeCapabilities>
   
   <themeName>Art Book Next</themeName>

   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   <aspectRatio>4:3</aspectRatio>
   <aspectRatio>19.5:9</aspectRatio>

   <colorScheme name="art-book-next">
      <label>Art Book Next</label>
   </colorScheme>
   <colorScheme name="art-book">
      <label>Art Book</label>
   </colorScheme>
   <colorScheme name="steam-os">
      <label>Steam OS</label>
   </colorScheme>
   <colorScheme name="snes">
      <label>SNES</label>
   </colorScheme>
   <colorScheme name="famicom">
      <label>Famicom</label>
   </colorScheme>
   <colorScheme name="black">
      <label>Black</label>
   </colorScheme>
   <colorScheme name="grayscale">
      <label>Grayscale</label>
   </colorScheme>

   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <!--
   ///
   Variants
   ///
   -->
   <!-- System View - Multi Art - List -->
   <variant name="system-multi-gamelist-list">
      <label>List</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover,marquee</mediaType>
         <useVariant>system-multi-gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="system-multi-gamelist-list-immersive">
      <label>List (Immersive)</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover,marquee</mediaType>
         <useVariant>system-multi-gamelist-list-basic</useVariant>
      </override>
   </variant>
   <variant name="system-multi-gamelist-list-no-metadata">
      <label>List (No Metadata)</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover,marquee</mediaType>
         <useVariant>system-multi-gamelist-list-basic</useVariant>
      </override>
   </variant>
   <!-- System View - Multi Art - Carousel -->
   <variant name="system-multi-gamelist-carousel">
      <label>Multi Art + Carousel</label>
      <selectable>false</selectable>
   </variant>
   <variant name="system-multi-gamelist-carousel-no-metadata">
      <label>Multi Art + Carousel (No Metadata)</label>
      <selectable>false</selectable>
   </variant>
   <!-- System View - Multi Art - Basic -->
   <variant name="system-multi-gamelist-list-basic">
      <label>Multi Art + List (Basic)</label>
      <selectable>false</selectable>
   </variant>

   <!-- Help Off - System View - Multi Art - List -->
   <variant name="system-multi-gamelist-list-nh">
      <label>Help System Off + List</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover,marquee</mediaType>
         <useVariant>system-multi-gamelist-list-basic-nh</useVariant>
      </override>
   </variant>
   <variant name="system-multi-gamelist-list-immersive-nh">
      <label>Help System Off + List (Immersive)</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover,marquee</mediaType>
         <useVariant>system-multi-gamelist-list-basic-nh</useVariant>
      </override>
   </variant>
   <variant name="system-multi-gamelist-list-no-metadata-nh">
      <label>Help System Off + List (No Metadata)</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover,marquee</mediaType>
         <useVariant>system-multi-gamelist-list-basic-nh</useVariant>
      </override>
   </variant>
   <!-- Help Off - System View - Multi Art - Basic -->
   <variant name="system-multi-gamelist-list-basic-nh">
      <label>Help System Off: Multi Art + List (Basic)</label>
      <selectable>false</selectable>
   </variant>

</themeCapabilities>


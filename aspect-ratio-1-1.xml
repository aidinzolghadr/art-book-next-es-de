<!-- 
1:1 aspect ratio
based on 480x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-cover,
      gamelist-list-screenshot-marquee
         ">
      <view name="system,gamelist">
         <helpsystem name="help">
            <pos>0.5 0.942708333333333</pos><!-- 240 452.5 -->
            <fontSize>${helpsystemFontSize}</fontSize><!-- 16 -->
            <entrySpacing>0.021875</entrySpacing><!-- 14 -->
            <iconTextSpacing>0.00625</iconTextSpacing><!-- 4 -->
            <entries>back, start, a, b, x</entries>
         </helpsystem>
         <image name="help-background">
            <size>1 0.114583333333333</size><!-- 480 55 -->
         </image>
      </view>
      <fontSize name="small">
         <variables>
            <helpsystemFontSize>0.029166666666667</helpsystemFontSize><!-- 14 -->
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <helpsystemFontSize>0.03333333</helpsystemFontSize><!-- 16 -->
         </variables>
      </fontSize>
      <fontSize name="large,x-large">
         <variables>
            <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
         </variables>
      </fontSize>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee-nh,
      gamelist-list-basic-nh
      ">
      <view name="system,gamelist">
         <image name="help-background">
            <visible>false</visible>
         </image>
         <helpsystem name="help">
            <origin>0 0</origin>
            <pos>1 1</pos>
         </helpsystem>
      </view>
   </variant>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <maxItemCount>3.1</maxItemCount>
      </carousel>
      <image name="system-logo">
         <maxSize>0.7 0.5</maxSize>
      </image>
   </view>

   <!--
   ///
   Gamelist View - Basic & List Variants
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <maxSize>0.3125 0.104166666666667</maxSize><!-- 150 50 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.072916666666667 0.25</pos><!-- 35 120 -->
            <fontSize>${gamelistFontSize}</fontSize>
         </textlist>
      </view>
      <fontSize name="small">
         <variables>
            <gamelistFontSize>0.033333333333333</gamelistFontSize><!-- 16 -->
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <gamelistFontSize>0.041666666666667</gamelistFontSize><!-- 20 -->
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistFontSize>0.05</gamelistFontSize><!-- 24 -->
         </variables>
      </fontSize>
      <fontSize name="x-large">
         <variables>
            <gamelistFontSize>0.05833333</gamelistFontSize><!-- 28 -->
         </variables>
      </fontSize>
   </variant>
   <variant name="
      gamelist-list-basic,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-cover,
      gamelist-list-screenshot-marquee
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <lineSpacing>${gamelistLineSpacing}</lineSpacing>
         </textlist>
      </view>
      <fontSize name="small">
         <variables>
            <gamelistLineSpacing>2.01388889</gamelistLineSpacing><!-- 290/9/16 -->
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <gamelistLineSpacing>1.8125</gamelistLineSpacing><!-- 290/8/20 -->
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistLineSpacing>1.72619048</gamelistLineSpacing><!-- 290/7/24 -->
         </variables>
      </fontSize>
      <fontSize name="x-large">
         <variables>
            <gamelistLineSpacing>1.72619048</gamelistLineSpacing><!-- 290/6/28 -->
         </variables>
      </fontSize>
   </variant>
   <variant name="
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <lineSpacing>${gamelistLineSpacing}</lineSpacing>
         </textlist>
      </view>
      <fontSize name="small">
         <variables>
            <gamelistLineSpacing>2.15</gamelistLineSpacing><!-- 344/10/16 -->
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <gamelistLineSpacing>1.91111111</gamelistLineSpacing><!-- 344/9/20 -->
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistLineSpacing>1.79166667</gamelistLineSpacing><!-- 344/8/24 -->
         </variables>
      </fontSize>
      <fontSize name="x-large">
         <variables>
            <gamelistLineSpacing>1.75510204</gamelistLineSpacing><!-- 344/7/28 -->
         </variables>
      </fontSize>
   </variant>

   <!--
   ///
   Gamelist View - Basic Variant
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.5 0.130208333333333</pos><!-- 240 62.5 -->
         </image>
      </view>
   </variant>
   <variant name="gamelist-list-basic">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.854166666666667 0.60416667</size><!-- 410 290 -->
         </textlist>
      </view>
   </variant>
   <variant name="gamelist-list-basic-nh">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.854166666666667 0.71666667</size><!-- 410 344 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="gamelist-background">
            <size>0.5 1</size><!-- 240 480 -->
         </image>
         <image name="logo">
            <pos>0.25 0.130208333333333</pos><!-- 120 62.5 -->
         </image>
      </view>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-cover,
      gamelist-list-screenshot-marquee
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.333333333333333 0.60416667</size><!-- 160 290 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.333333333333333 0.71666667</size><!-- 160 344 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Metadata
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="game-art-background">
            <visible>false</visible>
         </image>
         <text name="description">
            <fontSize>${gamelistDescriptionFontSize}</fontSize>
            <lineSpacing>${gamelistDescriptionLineSpacing}</lineSpacing>
            <size>0.36458333 0.25</size><!-- 175 120 -->
         </text>
      </view>
      <fontSize name="small">
         <variables>
            <gamelistDescriptionFontSize>0.033333333333333</gamelistDescriptionFontSize><!-- 16 -->
            <gamelistDescriptionLineSpacing>1.9125</gamelistDescriptionLineSpacing>
            <gamelistMetadataIconSize>0 0.05416667</gamelistMetadataIconSize><!-- 26 -->
            <gamelistMetadataFontSize>0.033333333333333</gamelistMetadataFontSize><!-- 16 -->
            <gamelistDateFormat>%Y-%m-%d</gamelistDateFormat>
         </variables>
      </fontSize>
      <fontSize name="medium">
         <variables>
            <gamelistDescriptionFontSize>0.041666666666667</gamelistDescriptionFontSize><!-- 20 -->
            <gamelistDescriptionLineSpacing>2.125</gamelistDescriptionLineSpacing>
            <gamelistMetadataIconSize>0 0.05416667</gamelistMetadataIconSize><!-- 26 -->
            <gamelistMetadataFontSize>0.04166667</gamelistMetadataFontSize><!-- 20 -->
            <gamelistDateFormat>%Y-%m</gamelistDateFormat>
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistDescriptionFontSize>0.05</gamelistDescriptionFontSize><!-- 24 -->
            <gamelistDescriptionLineSpacing>1.7</gamelistDescriptionLineSpacing>
            <gamelistMetadataIconSize>0 0.05416667</gamelistMetadataIconSize><!-- 26 -->
            <gamelistMetadataFontSize>0.04583333</gamelistMetadataFontSize><!-- 22 -->
            <gamelistDateFormat>%Y-%m</gamelistDateFormat>
         </variables>
      </fontSize>
      <fontSize name="x-large">
         <variables>
            <gamelistDescriptionFontSize>0.05</gamelistDescriptionFontSize><!-- 24 -->
            <gamelistDescriptionLineSpacing>1.7</gamelistDescriptionLineSpacing>
            <gamelistMetadataIconSize>0 0.05416667</gamelistMetadataIconSize><!-- 26 -->
            <gamelistMetadataFontSize>0.05</gamelistMetadataFontSize><!-- 24 -->
            <gamelistDateFormat>%Y</gamelistDateFormat>
         </variables>
      </fontSize>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-screenshot-marquee
      ">
      <view name="gamelist">
         <text name="description">
            <pos>0.567708333333333 0.58125</pos><!-- 272.5 279 -->
         </text>
      </view>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover-nh,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <text name="description">
            <pos>0.567708333333333 0.69479167</pos><!-- 272.5 333.5 -->
         </text>
         <rating name="rating">
            <origin>0.5 0.5</origin>
            <pos>0.75 0.625</pos><!-- 75% 300 -->
            <size>${gamelistMetadataIconSize}</size>
            <visible>true</visible>
         </rating>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Metadata & Miximage, Metadata & Boxart
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-cover,
      gamelist-list-metadata-cover-nh
      ">
      <view name="gamelist">
         <badges name="badges">
            <pos>0.947916666666667 0.052083333333333</pos><!-- 455 25 -->
            <size>0.083333333333333 0.770833333333333</size><!-- 40 370 -->
            <itemMargin>-1 0.0075</itemMargin>
         </badges>
         <video name="game-art">
            <pos>0.75 0.296875</pos><!-- 360 142.5 -->
            <maxSize>0.40625 0.46875</maxSize><!-- 195 225 -->
         </video>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Metadata, Screenshot & Marquee
   ///
   -->
   <variant name="
      gamelist-list-metadata-screenshot-marquee, 
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <badges name="badges">
            <pos>0.947916666666667 0.052083333333333</pos><!-- 455 25 -->
            <size>0.083333333333333 0.770833333333333</size><!-- 40 370 -->
            <itemMargin>-1 0.0075</itemMargin>
         </badges>
         <image name="marquee">
            <origin>0.5 1</origin>
            <pos>0.75 0.541666666666667</pos><!-- 360 260 -->
            <maxSize>0.296875 0.125</maxSize><!-- 142.5 60 -->
         </image>
         <video name="game-art">
            <pos>0.75 0.25</pos><!-- 360 120 -->
            <cropSize>0.5 0.541666666666667</cropSize><!-- 240 260 -->
         </video>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Boxart
   ///
   -->
   <variant name="gamelist-list-cover">
      <view name="gamelist">
         <video name="game-art">
            <pos>0.71875 0.447916666666667</pos><!-- 345 215 -->
            <cropSize>0.4375 0.75</cropSize><!-- 210 360 -->
            <imageMaxSize>0.4375 0.75</imageMaxSize><!-- 210 360 -->
         </video>
      </view>
   </variant>
   <variant name="gamelist-list-cover-nh">
      <view name="gamelist">
         <video name="game-art">
            <pos>0.71875 0.5</pos><!-- 345 240 -->
            <cropSize>0.4375 0.864583333333333</cropSize><!-- 210 415 -->
            <imageMaxSize>0.4375 0.864583333333333</imageMaxSize><!-- 210 415 -->
         </video>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Screenshot & Marquee
   ///
   -->
   <variant name="
      gamelist-list-screenshot-marquee, 
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <badges name="badges">
            <pos>0.947916666666667 0.052083333333333</pos><!-- 455 25 -->
            <size>0.083333333333333 0.770833333333333</size><!-- 40 370 -->
            <itemMargin>-1 0.0075</itemMargin>
         </badges>
      </view>
   </variant>
   <variant name="gamelist-list-screenshot-marquee">
      <view name="gamelist">
         <image name="marquee">
            <pos>0.75 0.442708333333333</pos><!-- 360 212.5 -->
            <maxSize>0.3125 0.625</maxSize><!-- 150 300 -->
         </image>
         <video name="game-art">
            <pos>0.75 0.442708333333333</pos><!-- 360 212.5 -->
            <cropSize>0.5 0.885416666666667</cropSize><!-- 240 425 -->
         </video>
      </view>
   </variant>
   <variant name="gamelist-list-screenshot-marquee-nh">
      <view name="gamelist">
         <image name="marquee">
            <pos>0.75 0.5</pos><!-- 360 240 -->
            <maxSize>0.3125 0.625</maxSize><!-- 150 300 -->
         </image>
         <video name="game-art">
            <pos>0.75 0.5</pos><!-- 360 240 -->
            <cropSize>0.5 1</cropSize><!-- 240 480-->
         </video>
      </view>
   </variant>
   
</theme>
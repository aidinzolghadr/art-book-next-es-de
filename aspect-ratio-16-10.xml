<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <image name="help-background">
         <size>1 0.104166666666667</size><!-- 100% 125 -->
      </image>
      <helpsystem name="help">
         <entrySpacing>0.012658227848101</entrySpacing><!-- ? -->
         <pos>0.5 0.9475</pos><!-- 50% 1137 -->
         <fontSize>0.028333333333333</fontSize><!-- 34 -->
      </helpsystem>
   </view>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee-nh,
      gamelist-list-basic-nh
      ">
      <view name="system,gamelist">
         <image name="help-background">
            <visible>false</visible>
         </image>
         <helpsystem name="help">
            <origin>0 0</origin>
            <pos>1 1</pos>
         </helpsystem>
      </view>
   </variant>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <maxItemCount>5</maxItemCount>
      </carousel>
   </view>

   <!--
   ///
   Gamelist View - Basic & List Variants
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh,
      ">
      <view name="gamelist">
         <image name="logo">
            <maxSize>0.276041666666667 0.1</maxSize><!-- 530 120 -->
         </image>
         <textlist name="gamelist-list">
            <fontSize>0.035</fontSize><!-- 42 -->
            <lineSpacing>1.476190476190476</lineSpacing><!-- 62 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <lineSpacing>1.46</lineSpacing><!-- 6/6 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - Basic Variant
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.5 0.120833333333333</pos><!-- 50% 145 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.5 0.233333333333333</pos><!-- 50% 280 -->
            <size>0.895833333333333 0.62</size><!-- 1720 744(62X12) -->
         </textlist>
      </view>
   </variant>
   <!-- Basic Help System Off -->
   <variant name="
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.7 0.723333333333333</size><!-- - 868(62X14) -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.1875 0.120833333333333</pos><!-- 360 145 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.033854166666667 0.233333333333333</pos><!-- 65 280 -->
            <size>0.307291666666667 0.62</size><!-- 590 744(62X12) -->
         </textlist>
         <image name="gamelist-background">
            <size>0.375 1</size><!-- 720 100% -->
         </image>
         <badges name="badges">
            <pos>0.973958333333333 0.041666666666667</pos><!-- 1870 50 -->
            <size>0.041666666666667 0.54</size><!-- 80 648 -->
            <itemMargin>-1 0.0075</itemMargin>
         </badges>
      </view>
   </variant>

   <!-- List & List (Immersive) -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <text name="description">
            <pos>0.408333333333333 0.71</pos><!-- 784 852 -->
            <size>0.395833333333333 0.14</size><!-- 760 168 -->
            <fontSize>0.033333333333333</fontSize><!-- 40 -->
            <lineSpacing>1.42</lineSpacing>
         </text>
         <rating name="rating">
            <pos>0.854166666666667 0.729166666666667</pos><!-- 1640 875 -->
            <size>0 0.033333333333333</size><!-- - 40 -->
         </rating>
         <image name="releasedate-icon">
            <pos>0.854166666666667 0.7825</pos><!-- 1640 939 -->
            <maxSize>0.020833333333333 0.033333333333333</maxSize><!-- 40 40 -->
         </image>
         <datetime name="releasedate">
            <pos>0.884375 0.7825</pos><!-- 1698 939 -->
            <fontSize>0.023333333333333</fontSize><!-- 28 -->
         </datetime>
         <image name="players-icon">
            <pos>0.854166666666667 0.834166666666667</pos><!-- 1640 1001 -->
            <maxSize>0.020833333333333 0.033333333333333</maxSize><!-- 40 40 -->
         </image>
         <text name="players">
            <pos>0.884375 0.834166666666667</pos><!-- 1698 1001 -->
            <fontSize>0.023333333333333</fontSize><!-- 28 -->
         </text>
      </view>
   </variant>

   <!-- List -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh
      ">
      <view name="gamelist">
         <image name="game-metadata-background">
            <pos>0.375 0</pos><!-- 720 0 -->
            <size>0.625 1</size><!-- 1200 100%-->
            <zIndex>1</zIndex>
         </image>
         <video name="video">
            <pos>0.6875 0.3375</pos><!-- 1320 405 -->
            <maxSize>0.5625 0.558333333333333</maxSize><!-- 1080 670 -->
         </video>
      </view>
   </variant>

   <!-- List (Immersive) -->
   <variant name="
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="game-metadata-background">
            <pos>0.375 0.658333333333333</pos><!-- 720 790 -->
            <size>0.625 0.341666666666667</size><!-- 1200 410-->
         </image>
         <image name="marquee">
            <pos>0.973958333333333 0.6875</pos><!-- 1870 705 -->
            <maxSize>0.15625 0.18</maxSize><!-- 780 216 -->
         </image>
         <video name="video">
            <pos>0.6875 0.329166666666667</pos><!-- 1320 395 -->
            <cropSize>0.625 0.658333333333333</cropSize><!-- 1200 790 -->
         </video>
      </view>
   </variant>

   <!-- List + List (Immersive) Help System Off -->
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.307291666666667 0.723333333333333</size><!-- 590 868(62X14) -->
         </textlist>
         <text name="description">
            <pos>0.408333333333333 0.71</pos><!-- 784 852 -->
            <size>0.395833333333333 0.233333333333333</size><!-- 760 280 -->
         </text>
         <image name="last-played-icon">
            <pos>0.854166666666667 0.881666666666667</pos><!-- 1640 1058 -->
            <maxSize>0.01875 0.03</maxSize><!-- 36 36 -->
         </image>
         <datetime name="last-played">
            <pos>0.884375 0.881666666666667</pos><!-- 1698 1058 -->
            <fontSize>0.023333333333333</fontSize><!-- 28 -->
            <metadata>lastplayed</metadata>
         </datetime>
         <image name="play-count-icon">
            <pos>0.854166666666667 0.93</pos><!-- 1640 1116 -->
            <maxSize>0.020833333333333 0.033333333333333</maxSize><!-- 40 40 -->
         </image>
         <text name="play-count">
            <pos>0.884375 0.93</pos><!-- 1698 1116 -->
            <fontSize>0.023333333333333</fontSize><!-- 28 -->
            <metadata>playcount</metadata>
         </text>
      </view>
   </variant>

   <!-- List (No Metadata) -->
   <variant name="
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="marquee">
            <pos>0.6875 0.447916666666667</pos><!-- 1320 537.5 -->
            <maxSize>0.40625 0.754166666666667</maxSize><!-- 780 905 -->
         </image>
         <video name="video">
            <pos>0.375 0</pos><!-- 720 0 -->
            <cropSize>0.625 0.895833333333333</cropSize><!-- 1200 1075 -->
         </video>
      </view>
   </variant>

   <!-- List (No Metadata) Help System Off -->
   <variant name="
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <size>0.307291666666667 0.723333333333333</size><!-- 590 868(62X14) -->
         </textlist>
         <image name="marquee">
            <pos>0.6875 0.5</pos><!-- 1320 50% -->
            <maxSize>0.40625 0.754166666666667</maxSize><!-- 780 905 -->
         </image>
         <video name="video">
            <pos>0.375 0</pos><!-- 720 0 -->
            <cropSize>0.625 1</cropSize><!-- 1200 100% -->
         </video>
      </view>
   </variant>

</theme>
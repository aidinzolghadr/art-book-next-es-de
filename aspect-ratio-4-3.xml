<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <image name="help-background">
         <visible>false</visible>
      </image>
      <helpsystem name="help">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </helpsystem>
   </view>

   <!--
   ///
   System View - Variants
   ///
   -->
   <!-- Centered Art -->
   <variant name="
      system-centered-gamelist-list-basic,
      system-centered-gamelist-list,
      system-centered-gamelist-list-immersive,
      system-centered-gamelist-list-no-metadata,
      system-centered-gamelist-carousel,
      system-centered-gamelist-carousel-no-metadata
      ">
      <view name="system">
         <image name="system-art-mask">
            <path>./_inc/images/system-art-mask-4-3.png</path>
         </image>
         <carousel name="system-carousel">
            <itemScale>2.5</itemScale>
         </carousel>
      </view>
   </variant>
   <!-- Multi Art -->
   <variant name="
      system-multi-gamelist-list-basic,
      system-multi-gamelist-list-basic-nh,
      system-multi-gamelist-list,
      system-multi-gamelist-list-nh,
      system-multi-gamelist-list-immersive,
      system-multi-gamelist-list-immersive-nh,
      system-multi-gamelist-list-no-metadata,
      system-multi-gamelist-list-no-metadata-nh,
      system-multi-gamelist-carousel,
      system-multi-gamelist-carousel-no-metadata
      ">
      <view name="system">
         <carousel name="system-carousel">
            <maxItemCount>4.15</maxItemCount>
         </carousel>
         <image name="system-logo">
            <maxSize>0.6 0.4</maxSize>
         </image>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - Basic & List Variants
   ///
   -->
   <variant name="
      system-centered-gamelist-list-basic,
      system-centered-gamelist-list,
      system-centered-gamelist-list-immersive,
      system-centered-gamelist-list-no-metadata,
      system-multi-gamelist-list-basic,
      system-multi-gamelist-list-basic-nh,
      system-multi-gamelist-list,
      system-multi-gamelist-list-nh,
      system-multi-gamelist-list-immersive,
      system-multi-gamelist-list-immersive-nh,
      system-multi-gamelist-list-no-metadata,
      system-multi-gamelist-list-no-metadata-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <maxSize>0.359375 0.104166666666667</maxSize><!-- 230 50 -->
         </image>
         <textlist name="gamelist-list">
            <fontSize>0.039583333333333</fontSize><!-- 19 -->
            <lineSpacing>1.49</lineSpacing>
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - Basic Variant
   ///
   -->
   <variant name="
      system-centered-gamelist-list-basic,
      system-multi-gamelist-list-basic,
      system-multi-gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.5 0.135416666666667</pos><!-- 50% 65 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.5 0.24</pos><!-- 50% 134 -->
            <size>0.84375 0.725</size><!-- 540 348 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants
   ///
   -->
   <variant name="
      system-centered-gamelist-list,
      system-centered-gamelist-list-immersive,
      system-centered-gamelist-list-no-metadata,
      system-multi-gamelist-list,
      system-multi-gamelist-list-nh,
      system-multi-gamelist-list-immersive,
      system-multi-gamelist-list-immersive-nh,
      system-multi-gamelist-list-no-metadata,
      system-multi-gamelist-list-no-metadata-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.25 0.135416666666667</pos><!-- 160 65 -->
         </image>
         <textlist name="gamelist-list">
            <pos>0.0546875 0.24</pos><!-- 35 134 -->
            <size>0.390625 0.725</size><!-- 250 348 -->
         </textlist>
         <image name="gamelist-background">
            <size>0.5 1</size><!-- 320 480 -->
         </image>
         <badges name="badges">
            <pos>0.9609375 0.052083333333333</pos><!-- 615 25 -->
            <size>0.0625 0.770833333333333</size><!-- 40 370 -->
            <itemMargin>-1 0.0075</itemMargin>
         </badges>
      </view>
   </variant>

   <!-- List & List (Immersive) -->
   <variant name="
      system-centered-gamelist-list,
      system-centered-gamelist-list-immersive,
      system-multi-gamelist-list,
      system-multi-gamelist-list-nh,
      system-multi-gamelist-list-immersive,
      system-multi-gamelist-list-immersive-nh
      ">
      <view name="gamelist">
         <text name="description">
            <pos>0.546875 0.78125</pos><!-- 350 375 -->
            <size>0.40625 0.158333333333333</size><!-- 260 78 -->
            <fontSize>0.033333333333333</fontSize><!-- 16 -->
            <lineSpacing>1.22</lineSpacing>
            </text>
         <rating name="rating">
            <pos>0.546875 0.71875</pos><!-- 350 345 -->
            <size>0 0.041666666666667</size><!-- x 20 -->
         </rating>
         <image name="releasedate-icon">
            <pos>0.734375 0.71875</pos><!-- 470 345 -->
            <size>0.03125 0.041666666666667</size><!-- 20 20 -->
         </image>
         <datetime name="releasedate">
            <pos>0.78125 0.71875</pos><!-- 500 345 -->
            <size>0.1875 0.041666666666667</size><!-- 120 20 -->
            <fontSize>0.029166666666667</fontSize><!-- 14 -->
         </datetime>
         <image name="players-icon">
            <visible>false</visible>
         </image>
         <text name="players">
            <visible>false</visible>
         </text>
      </view>
   </variant>

   <!-- List -->
   <variant name="
      system-centered-gamelist-list,
      system-multi-gamelist-list,
      system-multi-gamelist-list-nh
      ">
      <view name="gamelist">
         <image name="game-metadata-background">
            <origin>0 1</origin>
            <pos>0.5 1</pos><!-- 320 0 -->
            <size>0.5 0.354166666666667</size><!-- 320 170-->
            <zIndex>3</zIndex>
         </image>
         <video name="video">
            <pos>0.75 0.322916666666667</pos><!-- 480 155 -->
            <maxSize>0.40625 0.520833333333333</maxSize><!-- 260 250 -->
            <zIndex>2</zIndex>
         </video>
      </view>
   </variant>

   <!-- List (Immersive) -->
   <variant name="
      system-centered-gamelist-list-immersive,
      system-multi-gamelist-list-immersive,
      system-multi-gamelist-list-immersive-nh
      ">
      <view name="gamelist">
         <image name="game-metadata-background">
            <origin>0 1</origin>
            <pos>0.5 1</pos><!-- 320 0 -->
            <size>0.5 0.354166666666667</size><!-- 320 170-->
            <zIndex>3</zIndex>
         </image>
         <image name="marquee">
            <visible>false</visible>
         </image>
         <video name="video">
            <pos>0.75 0.322916666666667</pos><!-- 480 155 -->
            <maxSize>0.75 1</maxSize><!-- 480 640 -->
            <zIndex>2</zIndex>
         </video>
      </view>
   </variant>

   <!-- List + List (Immersive) Help System Off -->
   <variant name="
      system-multi-gamelist-list-nh,
      system-multi-gamelist-list-immersive-nh
      ">
      <view name="gamelist">
         <image name="last-played-icon">
            <visible>false</visible>
         </image>
         <datetime name="last-played">
            <visible>false</visible>
         </datetime>
         <image name="play-count-icon">
            <visible>false</visible>
         </image>
         <text name="play-count">
            <visible>false</visible>
         </text>
      </view>
   </variant>

   <!-- List (No Metadata) -->
   <variant name="
      system-centered-gamelist-list-no-metadata,
      system-multi-gamelist-list-no-metadata,
      system-multi-gamelist-list-no-metadata-nh
      ">
      <view name="gamelist">
         <image name="marquee">
            <pos>0.75 0.5</pos><!-- 480 240 -->
            <maxSize>0.359375 0.895833333333333</maxSize><!-- 230 430 -->
         </image>
         <video name="video">
            <pos>0.5 00</pos><!-- 320 0 -->
            <cropSize>0.5 1</cropSize><!-- 320 100% -->
         </video>
      </view>
   </variant>

   <!--
   ///
   Carousel Variants
   ///
   -->
   <variant name="
      system-centered-gamelist-carousel,
      system-centered-gamelist-carousel-no-metadata,
      system-multi-gamelist-carousel,
      system-multi-gamelist-carousel-no-metadata
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.5 0.125</pos>
            <maxSize>0.3 0.1</maxSize><!-- 300 60 -->
         </image>
         <badges name="badges">
            <pos>0.5 0.7</pos>
            <size>0.8 0.083333333333333</size><!-- 1372 40 -->
         </badges>
      </view>
   </variant>

   <!-- Carousel (No Metadata) -->
   <variant name="
      system-centered-gamelist-carousel-no-metadata,
      system-multi-gamelist-carousel-no-metadata
      ">
      <view name="gamelist">
         <carousel name="gamelist-carousel">
            <pos>0 0</pos>
            <size>1 1</size>
            <itemSize>0.4 0.4</itemSize>
            <itemScale>1.2</itemScale>
            <maxItemCount>3</maxItemCount>
            <unfocusedItemDimming>0.4</unfocusedItemDimming>
         </carousel>
      </view>
   </variant>

   <!-- Carousel -->
   <variant name="
      system-centered-gamelist-carousel,
      system-multi-gamelist-carousel
      ">
      <view name="gamelist">
         <carousel name="gamelist-carousel">
            <pos>0 0</pos>
            <size>1 1</size>
            <itemSize>0.4 0.4</itemSize>
            <itemScale>1.2</itemScale>
            <maxItemCount>3</maxItemCount>
            <unfocusedItemDimming>0.4</unfocusedItemDimming>
         </carousel>
         <rating name="rating">
            <origin>0 0</origin>
            <pos>1 1</pos>
         </rating>
         <text name="genre">
            <visible>false</visible>
         </text>
         <image name="icon-players">
            <visible>false</visible>
         </image>
         <text name="players">
            <visible>false</visible>
         </text>
         <image name="metadata-seperator-left">
            <visible>false</visible>
         </image>
         <text name="description">
            <origin>0.5 0</origin>
            <pos>0.5 0.8</pos>
            <size>0.8 0.2</size>
         </text>
         <image name="metadata-seperator-right">
            <visible>false</visible>
         </image>
         <image name="icon-release-date">
            <visible>false</visible>
         </image>
         <datetime name="releasedate">
            <visible>false</visible>
         </datetime>
         <image name="icon-developer">
            <visible>false</visible>
         </image>
         <text name="developer">
            <visible>false</visible>
         </text>
         <image name="icon-publisher">
            <visible>false</visible>
         </image>
         <text name="publisher">
            <visible>false</visible>
         </text>
         <image name="game-metadata-background">
            <pos>0 0.5</pos><!-- 0 240 -->
            <size>1 0.5</size><!-- 100% 240 -->
         </image>
      </view>
   </variant>

   <variant name="
      system-centered-gamelist-carousel,
      system-multi-gamelist-carousel
      ">
      <view name="gamelist">
         <image name="game-artwork">
            <cropSize>1 0.5</cropSize>
         </image>
      </view>
   </variant>

   <variant name="
      system-centered-gamelist-carousel-no-metadata,
      system-multi-gamelist-carousel-no-metadata
      ">
      <view name="gamelist">
         <text name="name">
            <origin>0.5 0</origin>
            <pos>0.5 0.77</pos>
            <size>0.8 0.2</size>
         </text>
      </view>
   </variant>
   
</theme>
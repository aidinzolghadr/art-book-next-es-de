<!-- 
4:3 Aspect Ratio
Based on 640x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <helpsystem name="help">
         <pos>0.5 0.947916666666667</pos><!-- 50% 455 -->
         <fontSize>0.041666666666667</fontSize><!-- 20 -->
         <entrySpacing>0.021875</entrySpacing><!-- 14 -->
         <iconTextSpacing>0.00625</iconTextSpacing><!-- 4 -->
      </helpsystem>
      <image name="help-background">
         <size>1 0.104166666666667</size><!-- 100% 50 -->
      </image>
   </view>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee-nh,
      gamelist-list-basic-nh
      ">
      <view name="system,gamelist">
         <image name="help-background">
            <visible>false</visible>
         </image>
         <helpsystem name="help">
            <origin>0 0</origin>
            <pos>1 1</pos>
         </helpsystem>
      </view>
   </variant>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <maxItemCount>4.15</maxItemCount>
      </carousel>
      <image name="system-logo">
         <maxSize>0.6 0.4</maxSize>
      </image>
   </view>

   <!--
   ///
   Gamelist View - Basic & List Variants
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh,
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <maxSize>0.359375 0.104166666666667</maxSize><!-- 230 50 -->
         </image>
         <textlist name="gamelist-list">
            <fontSize>${gamelistFontSize}</fontSize><!-- 19 -->
            <lineSpacing>${gamelistLineSpacing}</lineSpacing>
         </textlist>
      </view>
      <fontSize name="medium">
         <variables>
            <gamelistPos>0.021875 0.154166666666667</gamelistPos><!-- 14 72 -->
            <gamelistFontSize>0.041666666666667</gamelistFontSize><!-- 20 -->
            <gamelistLineSpacing>1.9</gamelistLineSpacing>
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistPos>0.021875 0.154166666666667</gamelistPos><!-- 14 72 -->
            <gamelistFontSize>0.05</gamelistFontSize><!-- 24 -->
            <gamelistLineSpacing>1.82</gamelistLineSpacing>
         </variables>
      </fontSize>
   </variant>

   <!--
   ///
   Gamelist View - Basic Variant
   ///
   -->
   <variant name="
      gamelist-list-basic,
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <image name="logo">
            <pos>0.5 0.125</pos><!-- 50% 60 -->
         </image>
      </view>
   </variant>
   <variant name="
      gamelist-list-basic
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <pos>0.5 0.233333333333333</pos><!-- 50% 112 -->
            <size>0.84375 0.725</size><!-- 540 348 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-basic-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <pos>0.5 0.233333333333333</pos><!-- 50% 112 -->
            <size>0.84375 0.725</size><!-- 540 348 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="gamelist-background">
            <size>0.5 1</size><!-- 50% 100% -->
         </image>
         <image name="logo">
            <pos>0.25 0.125</pos><!-- 160 60 -->
         </image>
         <badges name="badges">
            <pos>0.9609375 0.052083333333333</pos><!-- 615 25 -->
            <size>0.0625 0.770833333333333</size><!-- 40 370 -->
            <itemMargin>-1 0.0075</itemMargin>
         </badges>
      </view>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-cover,
      gamelist-list-screenshot-marquee
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <pos>0.046875 0.229166666666667</pos><!-- 30 110 -->
            <size>0.390625 0.633333333333333</size><!-- 250 304 -->
         </textlist>
      </view>
   </variant>
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh,
      gamelist-list-cover-nh,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <textlist name="gamelist-list">
            <pos>0.046875 0.2375</pos><!-- 30 114 -->
            <size>0.390625 0.708333333333333</size><!-- 250 340 -->
         </textlist>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Metadata
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <text name="description">
            <pos>0.546875 0.78125</pos><!-- 350 375 -->
            <size>0.40625 0.158333333333333</size><!-- 260 78 -->
            <fontSize>0.033333333333333</fontSize><!-- 16 -->
            <lineSpacing>1.22</lineSpacing>
            </text>
         <rating name="rating">
            <pos>0.546875 0.71875</pos><!-- 350 345 -->
            <size>0 0.041666666666667</size><!-- x 20 -->
         </rating>
         <image name="releasedate-icon">
            <pos>0.734375 0.71875</pos><!-- 470 345 -->
            <size>0.03125 0.041666666666667</size><!-- 20 20 -->
         </image>
         <datetime name="releasedate">
            <pos>0.78125 0.71875</pos><!-- 500 345 -->
            <size>0.1875 0.041666666666667</size><!-- 120 20 -->
            <fontSize>0.029166666666667</fontSize><!-- 14 -->
         </datetime>
         <image name="players-icon">
            <visible>false</visible>
         </image>
         <text name="players">
            <visible>false</visible>
         </text>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Metadata & Miximage
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage,
      gamelist-list-metadata-miximage-nh
      ">
      <view name="gamelist">
         <image name="game-metadata-background">
            <origin>0 1</origin>
            <pos>0.5 1</pos><!-- 320 0 -->
            <size>0.5 0.354166666666667</size><!-- 320 170-->
            <zIndex>3</zIndex>
         </image>
         <video name="video">
            <pos>0.75 0.322916666666667</pos><!-- 480 155 -->
            <maxSize>0.40625 0.520833333333333</maxSize><!-- 260 250 -->
            <zIndex>2</zIndex>
         </video>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Metadata & Screenshot + Marquee
   ///
   -->
   <variant name="
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="game-metadata-background">
            <origin>0 1</origin>
            <pos>0.5 1</pos><!-- 320 0 -->
            <size>0.5 0.354166666666667</size><!-- 320 170-->
            <zIndex>3</zIndex>
         </image>
         <image name="marquee">
            <visible>false</visible>
         </image>
         <video name="video">
            <pos>0.75 0.322916666666667</pos><!-- 480 155 -->
            <maxSize>0.75 1</maxSize><!-- 480 640 -->
            <zIndex>2</zIndex>
         </video>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - NH List Variants: Metadata
   ///
   -->
   <variant name="
      gamelist-list-metadata-miximage-nh,
      gamelist-list-metadata-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="last-played-icon">
            <visible>false</visible>
         </image>
         <datetime name="last-played">
            <visible>false</visible>
         </datetime>
         <image name="play-count-icon">
            <visible>false</visible>
         </image>
         <text name="play-count">
            <visible>false</visible>
         </text>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Boxart
   ///
   -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-cover-nh
      ">
      <view name="gamelist">
         <video name="video">
            <pos>0.5 0</pos><!-- 320 0 -->
            <maxSize>0.5 1</maxSize><!-- 320 100% -->
         </video>
      </view>
   </variant>

   <!--
   ///
   Gamelist View - List Variants: Screenshot + Marquee
   ///
   -->
   <variant name="
      gamelist-list-screenshot-marquee,
      gamelist-list-screenshot-marquee-nh
      ">
      <view name="gamelist">
         <image name="marquee">
            <pos>0.75 0.5</pos><!-- 480 240 -->
            <maxSize>0.359375 0.895833333333333</maxSize><!-- 230 430 -->
         </image>
         <video name="video">
            <pos>0.5 00</pos><!-- 320 0 -->
            <cropSize>0.5 1</cropSize><!-- 320 100% -->
         </video>
      </view>
   </variant>
   
</theme>